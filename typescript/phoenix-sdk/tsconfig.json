{
    "compilerOptions": {
        "baseUrl": "src",
        "module": "commonjs",
        "target": "es2020",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "declaration": true,
        "paths": {
          "@instructions/*": ["instructions/*"],
          "@types/*": ["types/*"]
        },
        "outDir": "./dist"
      },
      "include": [
        "src/**/*.ts",
      ],
      "exclude": [
        "tests/**/*"
      ]
}